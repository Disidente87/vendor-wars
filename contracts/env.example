# ========================================
# 🔧 CONFIGURACIÓN DEL SMART CONTRACT
# ========================================

# 🌐 REDES DE BLOCKCHAIN
# Sepolia Testnet
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
SEPOLIA_PRIVATE_KEY=your_private_key_here

# Goerli Testnet (deprecated, usar Sepolia)
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID
GOERLI_PRIVATE_KEY=your_private_key_here

# Polygon Mumbai Testnet
MUMBAI_RPC_URL=https://polygon-mumbai.infura.io/v3/YOUR_INFURA_PROJECT_ID
MUMBAI_PRIVATE_KEY=your_private_key_here

# Ethereum Mainnet
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
MAINNET_PRIVATE_KEY=your_private_key_here

# 🎯 DIRECCIONES DE CONTRATOS
# Dirección del token $BATTLE (debe ser desplegado primero)
BATTLE_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000

# Dirección del contrato VendorRegistration (se genera después del deploy)
VENDOR_REGISTRATION_ADDRESS=0x0000000000000000000000000000000000000000

# 🔑 CLAVES PRIVADAS
# Clave privada para deploy y transacciones (NUNCA compartir)
PRIVATE_KEY=your_private_key_here

# 📊 REPORTES Y MONITOREO
# Habilitar reporte de gas
REPORT_GAS=true

# Moneda para reporte de gas
GAS_REPORTER_CURRENCY=USD

# 🔍 VERIFICACIÓN EN ETHERSCAN
# API Key de Etherscan para verificar contratos
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# API Key de Polygonscan
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# 🚀 CONFIGURACIÓN DE DEPLOY
# Guardar información del deploy en archivo
SAVE_DEPLOY_INFO=true

# Red por defecto para deploy
HARDHAT_NETWORK=localhost

# 💰 CONFIGURACIÓN DE GAS
# Límite de gas para transacciones
GAS_LIMIT=3000000

# Precio del gas en Gwei
GAS_PRICE=20000000000

# 🔒 CONFIGURACIÓN DE SEGURIDAD
# Multi-sig wallet para operaciones críticas
MULTISIG_WALLET_ADDRESS=0x0000000000000000000000000000000000000000

# Timelock para cambios de configuración (en segundos)
TIMELOCK_DELAY=86400

# 📝 NOTAS IMPORTANTES
# 1. NUNCA compartir o committear claves privadas
# 2. Usar siempre testnets para testing
# 3. Verificar contratos antes de usar en mainnet
# 4. Mantener backup de claves privadas
# 5. Usar hardware wallets para mainnet

# 🧪 TESTING
# Habilitar logs detallados en tests
HARDHAT_VERBOSE=true

# Timeout para tests (en ms)
TEST_TIMEOUT=30000

# 🔄 AUTOMATIZACIÓN
# Habilitar deploy automático en CI/CD
AUTO_DEPLOY=false

# Habilitar verificación automática
AUTO_VERIFY=true
