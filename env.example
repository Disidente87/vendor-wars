# Environment Configuration for Vendor Registration System

# =============================================================================
# BATTLE TOKEN CONTRACT ADDRESSES
# =============================================================================

# Main BATTLE token contract address (required for Base Sepolia)
BATTLE_TOKEN_CONTRACT_ADDRESS=0x...

# =============================================================================
# NETWORK RPC URLs
# =============================================================================

# Base Sepolia Network (L2 - Optimism-based)
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# =============================================================================
# DEPLOYMENT KEYS
# =============================================================================

# Private key for contract deployment (required for Base Sepolia)
SERVER_PRIVATE_KEY=your_private_key_here

# =============================================================================
# API KEYS
# =============================================================================

# Basescan API key (for Base Sepolia - can use ETHERSCAN_API_KEY)
BASESCAN_API_KEY=your_basescan_api_key

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase service role key (for admin operations)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Supabase anon key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key

# =============================================================================
# DEPLOYMENT OPTIONS
# =============================================================================

# Save deployment info to file (optional)
SAVE_DEPLOY_INFO=false

# Gas reporting (optional)
REPORT_GAS=false

# =============================================================================
# NETWORK SELECTION
# =============================================================================

# Set this to the network you want to deploy to
# Options: hardhat, localhost, baseSepolia
HARDHAT_NETWORK=hardhat

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# For Base Sepolia deployment:
# HARDHAT_NETWORK=baseSepolia
# BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
# BATTLE_TOKEN_CONTRACT_ADDRESS=0x... (BATTLE token on Base Sepolia)
# SERVER_PRIVATE_KEY=your_private_key
# BASESCAN_API_KEY=your_api_key
